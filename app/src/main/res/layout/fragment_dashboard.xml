<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


<LinearLayout

    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fundraise" />

    <com.google.android.material.textfield.TextInputLayout
android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/campaign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="  Campaign Name"
            android:background="@drawable/textdesign"
            />
    </com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <EditText
            android:id="@+id/shortdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Short Description"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="2"
            android:background="@drawable/textdesign"
        />
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
            android:id="@+id/amt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="  Amount Required"
        android:background="@drawable/textdesign"
            />
</com.google.android.material.textfield.TextInputLayout>
<com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="13dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <EditText
        android:gravity="top"
        android:background="@drawable/textdesign"
        android:id="@+id/LongDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Long Description"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"/>



    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/addCamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Campaign"
        android:onClick="onClick"
android:background="@drawable/buttondesign"
        />
</LinearLayout>
</ScrollView>